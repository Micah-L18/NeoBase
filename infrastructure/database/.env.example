# NeoBase Database Configuration
# Copy this file to .env and update with your values

# Resource Limits (per container)
DB_CPU_LIMIT=1.0
DB_MEMORY_LIMIT=1G
DB_MEMORY_RESERVATION=512M

# Port Range for Database Instances
# Each user database will get a unique port in this range
PORT_RANGE_START=5432
PORT_RANGE_END=6432

# Network Configuration
DOCKER_NETWORK_NAME=neobase_network
DOCKER_NETWORK_SUBNET=172.20.0.0/16

# Backup Configuration
BACKUP_DIR=/var/backups/neobase
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"  # 2 AM daily

# PostgreSQL Defaults
POSTGRES_VERSION=16-alpine
DEFAULT_POSTGRES_LOCALE=en_US.UTF-8
DEFAULT_POSTGRES_ENCODING=UTF8

# Storage
DATA_VOLUME_PATH=/var/lib/neobase/data

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9187
